{
  "info": {
    "name": "LoginWA API",
    "_postman_id": "00000000-0000-0000-0000-000000000000",
    "description": "Postman collection for LoginWA OTP API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth Start",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{apiKey}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"phone\": \"6281234567890\",\n  \"country_code\": \"62\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/start",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "start"]
        }
      },
      "response": []
    },
    {
      "name": "Auth Verify",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{apiKey}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"session_id\": \"<SESSION_ID>\",\n  \"otp_code\": \"123456\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/verify",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "verify"]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://loginwa.com/api/v1"
    },
    {
      "key": "apiKey",
      "value": "YOUR_API_KEY"
    }
  ]
}
